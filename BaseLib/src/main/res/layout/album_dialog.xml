<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/album_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/album_album_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/main_btn_bg"
            android:foreground="?attr/selectableItemBackground"
            android:text="相册"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintBottom_toTopOf="@id/album_photograph_btn"
            android:layout_marginBottom="6dp"
            tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/album_photograph_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/main_btn_bg"
            android:foreground="?attr/selectableItemBackground"
            android:text="拍照"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintBottom_toTopOf="@id/album_cancel_btn"
            tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/album_cancel_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/login_out_bg"
            android:foreground="?attr/selectableItemBackground"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>