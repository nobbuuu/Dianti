<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">

    <ImageView
            android:id="@+id/safe_check_item_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_bg"
            tools:ignore="MissingConstraints" />

    <ImageView
            android:id="@+id/safe_check_item_l_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/wcb_icon_light"
            app:layout_constraintBottom_toBottomOf="@id/safe_check_item_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/safe_check_item_tv"
            tools:ignore="MissingConstraints" />

    <TextView
            android:id="@+id/safe_check_item_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:text="电梯安全管理机构和相关人员岗位职责"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintBottom_toTopOf="@id/safe_check_item_sci"
            app:layout_constraintLeft_toRightOf="@id/safe_check_item_l_iv"
            app:layout_constraintRight_toLeftOf="@id/safe_check_item_r_iv"
            app:layout_constraintTop_toBottomOf="@id/safe_check_item_line"
            tools:ignore="MissingConstraints" />

    <ImageView
            android:id="@+id/safe_check_item_r_iv"
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/jinru_icon"
            app:layout_constraintBottom_toBottomOf="@id/safe_check_item_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/safe_check_item_tv"
            tools:ignore="MissingConstraints" />

    <TextView
            android:id="@+id/safe_check_item_all_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/safe_check_item_sci"
            app:layout_constraintTop_toTopOf="@id/safe_check_item_line"
            tools:ignore="MissingConstraints" />

    <com.qt.dtzf.view.SafeCheckItemImageView
            android:id="@+id/safe_check_item_sci"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>