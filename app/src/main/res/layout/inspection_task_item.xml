<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg">

    <androidx.cardview.widget.CardView
            android:id="@+id/inspection_item_cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inspection_item_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="2020.05.01"
                    android:textColor="@color/main_button_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inspection_item_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/sin_in_text_line_color"
                    app:layout_constraintLeft_toLeftOf="@id/inspection_item_time_tv"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inspection_item_time_tv"
                    tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inspection_item_code_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="电梯注册码:"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintLeft_toLeftOf="@id/inspection_item_line"
                    app:layout_constraintTop_toBottomOf="@id/inspection_item_line"
                    tools:ignore="MissingConstraints" />


            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inspection_item_code_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:maxLines="2"
                    android:text="1001054165564156415655:1001054165564156415655"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintLeft_toRightOf="@id/inspection_item_code_tag"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/inspection_item_code_tag"
                    tools:ignore="MissingConstraints" />


            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inspection_item_number_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电梯编号:"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintLeft_toLeftOf="@id/inspection_item_code_tag"
                    app:layout_constraintTop_toTopOf="@id/inspection_item_number_tv"
                    tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inspection_item_number_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:maxLines="2"
                    android:text="1001054165564156415655:1001054165564156415655"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintLeft_toRightOf="@id/inspection_item_code_tag"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inspection_item_code_tv"
                    tools:ignore="MissingConstraints" />


            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inspection_item_address_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电梯地址:"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintLeft_toLeftOf="@id/inspection_item_code_tag"
                    app:layout_constraintTop_toTopOf="@id/inspection_item_address_tv"
                    tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inspection_item_address_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:maxLines="2"
                    android:text="1001054165564156415655:1001054165564156415655"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintBottom_toTopOf="@id/inspection_item_0_line"
                    app:layout_constraintLeft_toRightOf="@id/inspection_item_code_tag"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inspection_item_number_tv"
                    tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inspection_item_0_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/sin_in_text_line_color"
                    app:layout_constraintLeft_toLeftOf="@id/inspection_item_time_tv"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inspection_item_address_tv"
                    tools:ignore="MissingConstraints" />


            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/inspection_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/main_btn_bg"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="立即巡查"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/inspection_item_0_line"
                    tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>