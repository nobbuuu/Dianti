<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.base.baselib.view.TitleView
            android:id="@+id/change_pwd_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:textTitle="密码修改"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    <EditText
            android:id="@+id/change_pwd_old_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="136dp"
            android:background="@drawable/login_edit_bg"
            android:hint="输入老密码"
            android:inputType="textPassword"
            android:maxLength="8"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toBottomOf="@id/change_pwd_title"
            tools:ignore="MissingConstraints" />
    <EditText
            android:id="@+id/change_pwd_new_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/login_edit_bg"
            android:hint="输入新密码"
            android:inputType="textPassword"
            android:maxLength="8"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toBottomOf="@id/change_pwd_old_et"
            tools:ignore="MissingConstraints" />


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/change_pwd_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/main_btn_bg"
            android:foreground="?attr/selectableItemBackground"
            android:text="确定"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/text_size_16"
            tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>